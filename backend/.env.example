# AI Provider Configuration
# Options: "openai" (default) or "gemini"
AI_PROVIDER=openai

# OpenAI-compatible API Configuration
# Works with OpenAI, DeepSeek, Moonshot, etc.
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Gemini API Configuration (if using AI_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000

# AI Logging Configuration
# Set to "false" to disable AI request/response logging to file
AI_LOG_ENABLED=true
AI_LOG_FILE=logs/ai_requests.log
